public class EvenDigitSum {
    public static int getEvenDigitSum(int number){
        int sum=0;int x;
        while(number>0){
                x = number%10;
                if(x%2==0){
                    sum = sum+ x;
                }
                number=number/10;
            }
        if(number>=0){
            return sum;

        }

        return -1;
    }
}


